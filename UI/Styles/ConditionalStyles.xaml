                                                          VerticalAlignment="Center"
                                                          TextElement.FontWeight="Normal">
                                        </ContentPresenter>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Background" TargetName="border" Value="#a8cea7"/>
